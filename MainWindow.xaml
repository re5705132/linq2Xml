<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <SolidColorBrush x:Key="Brush1" Color="Black"/>
    </Window.Resources>
    <StackPanel>
        <Button Click="Button_Click_1">טעינת מסמך הXML </Button>
        <Button Click="Button_Click_2">כמה כיתות בכללי בסמינ</Button>
        <Button Click="Button_Click_3">שמות המורות ומספר תלמידותיהן</Button>
        <Button Click="Button_Click_4">ADD</Button>
        <Button Click="Button_Click_5">מחיקה</Button>
        <Button Click="Button_Click_6">עדכון</Button>
     
        <Button></Button>
        <ContentControl x:Name="myDoc"></ContentControl>
        <DataGrid x:Name="myGrid" ItemsSource="{Binding}" Height="232"></DataGrid>
    </StackPanel>
</Window>
